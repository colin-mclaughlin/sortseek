{
  "name": "sortseek",
  "version": "1.0.0",
  "description": "A local-first desktop file assistant for finding, understanding, and organizing documents",
  "main": "dist-electron/main.cjs",
  "homepage": "./",
  "type": "module",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "npm run dev",
    "electron:build": "npm run build && electron-builder",
    "electron:preview": "npm run build && electron .",
    "backend:dev": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "backend:install": "cd backend && pip install -r requirements.txt",
    "start": "concurrently \"npm run backend:dev\" \"npm run electron:dev\""
  },
  "resolutions": {
    "pdfjs-dist": "2.14.305"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "file-assistant",
    "local-first",
    "semantic-search"
  ],
  "author": "SortSeek Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "npm-force-resolutions": "^0.0.10",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^7.0.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.sortseek.app",
    "productName": "SortSeek",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "backend/**/*",
      "!backend/__pycache__/**/*",
      "!backend/.venv/**/*",
      "!backend/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**/*",
          "!.venv/**/*",
          "!*.pyc"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
